@model ImageSearch.Models.LogInViewModel

@{
    ViewData["Title"] = "Log In";
}

<h1>Log in</h1>

<h4>Admin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LogIn" asp-controller="Admins" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label><br />
                <input asp-for="Login" class="form-control" /><br />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label><br />
                <input type="password" asp-for="Password" class="form-control" /><br />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary" /><br />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Images">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
